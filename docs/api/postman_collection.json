{
  "info": {
    "name": "BugsTracker API",
    "description": "Production-grade Jira-equivalent issue tracking system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_exporter_id": "bugstracker"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{access_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api/v1",
      "type": "string"
    },
    {
      "key": "access_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "refresh_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "organization_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "project_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "issue_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.data.access);",
                  "    pm.environment.set('refresh_token', response.data.refresh);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"SecurePassword123!\",\n    \"full_name\": \"John Doe\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/register/",
              "host": ["{{base_url}}"],
              "path": ["auth", "register", ""]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.data.access);",
                  "    pm.environment.set('refresh_token', response.data.refresh);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"user@example.com\",\n    \"password\": \"SecurePassword123!\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/login/",
              "host": ["{{base_url}}"],
              "path": ["auth", "login", ""]
            }
          }
        },
        {
          "name": "Refresh Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('access_token', response.access);",
                  "    pm.environment.set('refresh_token', response.refresh);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"refresh\": \"{{refresh_token}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/auth/refresh/",
              "host": ["{{base_url}}"],
              "path": ["auth", "refresh", ""]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/auth/me/",
              "host": ["{{base_url}}"],
              "path": ["auth", "me", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Organizations",
      "item": [
        {
          "name": "Create Organization",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('organization_id', response.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"My Company\",\n    \"slug\": \"my-company\",\n    \"description\": \"Company description\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/organizations/",
              "host": ["{{base_url}}"],
              "path": ["organizations", ""]
            }
          }
        },
        {
          "name": "List Organizations",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/organizations/",
              "host": ["{{base_url}}"],
              "path": ["organizations", ""]
            }
          }
        },
        {
          "name": "Get Organization",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/organizations/{{organization_id}}/",
              "host": ["{{base_url}}"],
              "path": ["organizations", "{{organization_id}}", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Projects",
      "item": [
        {
          "name": "Create Project",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('project_id', response.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"organization\": \"{{organization_id}}\",\n    \"name\": \"My Project\",\n    \"key\": \"PROJ\",\n    \"description\": \"Project description\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/projects/",
              "host": ["{{base_url}}"],
              "path": ["projects", ""]
            }
          }
        },
        {
          "name": "List Projects",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/projects/",
              "host": ["{{base_url}}"],
              "path": ["projects", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Issues",
      "item": [
        {
          "name": "Create Issue",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.environment.set('issue_id', response.data.id);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"project\": \"{{project_id}}\",\n    \"issue_type\": \"task\",\n    \"summary\": \"Implement user authentication\",\n    \"description\": \"Add JWT-based authentication\",\n    \"priority\": \"high\",\n    \"labels\": [\"backend\", \"security\"]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/issues/",
              "host": ["{{base_url}}"],
              "path": ["issues", ""]
            }
          }
        },
        {
          "name": "List Issues",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/issues/?page=1&page_size=50",
              "host": ["{{base_url}}"],
              "path": ["issues", ""],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "page_size",
                  "value": "50"
                }
              ]
            }
          }
        },
        {
          "name": "Get Issue",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/issues/{{issue_id}}/",
              "host": ["{{base_url}}"],
              "path": ["issues", "{{issue_id}}", ""]
            }
          }
        },
        {
          "name": "Update Issue",
          "request": {
            "method": "PUT",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"summary\": \"Updated summary\",\n    \"priority\": \"critical\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{base_url}}/issues/{{issue_id}}/",
              "host": ["{{base_url}}"],
              "path": ["issues", "{{issue_id}}", ""]
            }
          }
        }
      ]
    },
    {
      "name": "Search",
      "item": [
        {
          "name": "JQL Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/search/?jql=project=\"PROJ\" AND status=\"in_progress\"",
              "host": ["{{base_url}}"],
              "path": ["search", ""],
              "query": [
                {
                  "key": "jql",
                  "value": "project=\"PROJ\" AND status=\"in_progress\""
                }
              ]
            }
          }
        },
        {
          "name": "Full-text Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/issues/?search=authentication",
              "host": ["{{base_url}}"],
              "path": ["issues", ""],
              "query": [
                {
                  "key": "search",
                  "value": "authentication"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Audit Logs",
      "item": [
        {
          "name": "List Audit Logs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/audit-logs/",
              "host": ["{{base_url}}"],
              "path": ["audit-logs", ""]
            }
          }
        },
        {
          "name": "Get Entity History",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/audit-logs/entity/Issue/{{issue_id}}/",
              "host": ["{{base_url}}"],
              "path": ["audit-logs", "entity", "Issue", "{{issue_id}}", ""]
            }
          }
        },
        {
          "name": "Get Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/audit-logs/statistics/?start_date=2026-01-01&end_date=2026-12-31",
              "host": ["{{base_url}}"],
              "path": ["audit-logs", "statistics", ""],
              "query": [
                {
                  "key": "start_date",
                  "value": "2026-01-01"
                },
                {
                  "key": "end_date",
                  "value": "2026-12-31"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
